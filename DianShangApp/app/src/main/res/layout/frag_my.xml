<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/my_bachground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:background="@drawable/shape_my_baizhi">

    </LinearLayout>

    <ImageView
        android:id="@+id/my_head_pic1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:src="@mipmap/my_head" />

    <TextView
        android:id="@+id/my_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_head_pic1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="我是吃不胖的小姐姐" />

    <LinearLayout
        android:id="@+id/wendang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_name_text"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <!--个人资料-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_information"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/my_information" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="个人资料" />
        </LinearLayout>
        <!--我的圈子-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_circle"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/my_circle" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="我的圈子" />
        </LinearLayout>
        <!--我的足迹-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_foot"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/my_foot" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="我的足迹" />
        </LinearLayout>
        <!--我的钱包-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_wallet"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/my_wallet" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="我的钱包" />
        </LinearLayout>
        <!--我的收货地址-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_address"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/my_address" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="我的收货地址" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
